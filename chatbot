    "import sqlite3\n",
    "import re\n",
    "from datetime import datetime\n",
    "\n",
    "def connect_to_db():\n",
    "    connection = sqlite3.connect(db_name)\n",
    "    cursor = connection.cursor()\n",
    "    return connection, cursor\n",
    "\n",
    "def get_data_from_db(query, cursor):\n",
    "    cursor.execute(query)\n",
    "    return cursor.fetchall()\n",
    "\n",
    "def chatbot():\n",
    "    print(\"Welcome to the SQL chatbot! Type 'exit' to quit.\")\n",
    "    \n",
    "    connection, cursor = connect_to_db('your_database.db')\n",
    "    \n",
    "    while True:\n",
    "        user_input = input(\"You: \")\n",
    "        \n",
    "        if user_input.lower() == 'exit':\n",
    "            print(\"Goodbye!\")\n",
    "            break\n",
    "        \n",
    "        elif re.search('show me all employees', user_input, re.IGNORECASE):\n",
    "            match = re.search(r\"\\[([^\\]]+)\\]\", user_input)\n",
    "            dept = match.group(1)\n",
    "            query = \"SELECT * FROM employees where department = ?;\"\n",
    "            cursor.execute(query, dept) \n",
    "            results = cursor.fetchall()\n",
    "            \n",
    "            if results:\n",
    "                for row in results:\n",
    "                    print(row)\n",
    "            else:\n",
    "                print(\"No data found.\")\n",
    "\n",
    "        elif re.search('Who is the manager', user_input, re.IGNORECASE):\n",
    "            match = re.search(r\"\\[([^\\]]+)\\]\", user_input)\n",
    "            dept = match.group(1)\n",
    "            query = \"SELECT Manager FROM departments where name = ?;\"\n",
    "            cursor.execute(query, dept) \n",
    "            results = cursor.fetchall()\n",
    "            \n",
    "            if results:\n",
    "                print(results)\n",
    "            else:\n",
    "                print(\"No data found.\")\n",
    "\n",
    "        elif re.search('List all employees hired', user_input, re.IGNORECASE):\n",
    "            match = re.search(r\"\\[([^\\]]+)\\]\", user_input)\n",
    "            date = match.group(1)\n",
    "            query = \"SELECT * FROM Employees where Hire_Date > ?;\"\n",
    "            cursor.execute(query, date) \n",
    "            results = cursor.fetchall()\n",
    "            \n",
    "            if results:\n",
    "                for row in results:\n",
    "                    print(row)\n",
    "            else:\n",
    "                print(\"No data found.\")\n",
    "\n",
    "        elif re.search('What is the total salary expense', user_input, re.IGNORECASE):\n",
    "            match = re.search(r\"\\[([^\\]]+)\\]\", user_input)\n",
    "            dept = match.group(1)\n",
    "            query = \"SELECT sum(salary) FROM Employees where department = ?;\"\n",
    "            cursor.execute(query, dept) \n",
    "            results = cursor.fetchall()\n",
    "            \n",
    "            if results:\n",
    "                print(row)\n",
    "            else:\n",
    "                print(\"No data found.\")\n",
    "        \n",
    "        else:\n",
    "            print(\"Sorry, I don't understand that command.\")\n",
    "    connection.close()\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    chatbot()\n"
   ]
